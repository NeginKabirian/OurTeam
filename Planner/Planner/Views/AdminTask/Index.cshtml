@model IEnumerable<Planner.Models.TaskItem>

@{
    Layout = null;
    ViewData["Title"] = "Task Management";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(135deg, #74ebd5, #ACB6E5);
            height: 100vh;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-start;
            margin: 0;
        }

        .navbar {
            width: 100%;
            background: white;
            padding: 1rem;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }

        .task-panel {
            background: white;
            padding: 2.5rem;
            border-radius: 20px;
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
            width: 100%;
            max-width: 900px;
            margin-top: 2rem;
        }

        .table {
            border-radius: 10px;
            overflow: hidden;
        }

        .btn-primary {
            border-radius: 10px;
            background-color: #6C63FF;
            border: none;
        }

            .btn-primary:hover {
                background-color: #5a52e0;
            }

        .btn-success, .btn-info, .btn-danger {
            border-radius: 10px;
        }
    </style>
</head>
<body>
    <div class="task-panel">
        <h3 class="text-center mb-4">🗂️ Task Management Panel</h3>
        <div class="d-grid mb-4">
            <a href="@Url.Action("Create", "AdminTask")" class="btn btn-primary">➕ New Task</a>
        </div>

        @if (!Model.Any())
        {
            <p class="text-center text-muted">No tasks found.</p>
        }
        else
        {
            <table class="table table-striped table-hover">
                <thead class="table-secondary text-dark">
                    <tr>
                        <th>Title</th>
                        <th>User</th>
                        <th>Deadline</th>
                        <th>Completed</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model)
                    {
                        <tr>
                            <td>@task.Title</td>
                            <td>@task.User?.Name</td>
                            <td>@task.Deadline.ToString("yyyy-MM-dd")</td>
                            <td>
                                @if (task.IsCompleted)
                                {
                                    <span class="badge bg-success">Yes</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">No</span>
                                }
                            </td>
                            <td>
                                <a href="@Url.Action("Edit", "AdminTask", new { id = task.Id })" class="btn btn-sm btn-info">✏️ Edit</a>
                                <a href="@Url.Action("Delete", "AdminTask", new { id = task.Id })" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this task?');">🗑️ Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</body>
</html>